{% extends 'bootstrap.html.twig' %}

{% block title %}{% trans %}admin.title{% endtrans %}{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block pagetitle %}
    <h1 class="mt-4">{% trans %}admin.manageknives.title{% endtrans %}</h1>
{% endblock %}

{% block body %}

    {% include "admin/adminmenu.html.twig" %}

    {# List knives #}
    <ul class="list-group">
        {% for knife in allknives %}
            <li class="list-group-item">
                <div class="row">
                    <div class="col">{{knife.name}}</div>
                    {# <div class="col-3">{{'admin.manageknives.category'|trans}} : {{knife.category}}</div>
                    <div class="col-3">{{'admin.manageknives.mechanism'|trans}} : {{knife.mechanism}}</div>
                    <div class="col-1">{{'admin.manageknives.stock'|trans}} : {{knife.stock}} </div>
                    <div class="col-1">{{knife.price}} â‚¬</div> #}
                    <div class="col-1 deleteaction" 
                            data-knifeid={{knife.id}}
                            data-knifename="{{knife.name}}"
                            data-message="{{'admin.manageknives.deleteconfirm'|trans}}"
                            data-bs-toggle="modal" data-bs-target="#deletionModal">
                        <a href="{{ path('bootadmin.knives.delete', {id: knife.id}) }}"><i class="fa fa-trash"></i></a>
                    </div>
                    <div class="col-1">
                        <a href="{{ path('bootadmin.knives.edit', {id: knife.id}) }}"><i class="fa fa-pen-to-square"></i></a>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
    <!-- Modal used for knife deletion confirmation -->
    <div class="modal fade" id="deletionModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="deleteModalLabel">{{'admin.manageknives.deleteconfirm'|trans}}</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <p>Will be replaced by knife.js handler</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{'buttons.cancel'|trans}}</button>
            {# <button type="button" onclick="window.location.href='https://w3docs.com';" class="btn btn-primary">{{'buttons.confirm'|trans}}</button> #}
            <button type="button" class="btn btn-primary modalaction">{{'buttons.confirm'|trans}}</button>
        </div>
        </div>
    </div>
    </div>    
    <script src="{{ asset('node_modules/jquery/dist/jquery.min.js')}}"></script>
    <script src="{{ asset('scripts/knife.js')}}"></script>
{% endblock %}
