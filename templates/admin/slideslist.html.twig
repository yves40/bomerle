
    <h2 class="mt-3 mb-3">{% trans %}admin.manageslides.listheader{% endtrans %}</h2>
    <ul class="list-group">
        {% for slide in allslides %}
            <li class="list-group-item">
                <div class="row">
                    {% if locale == 'fr' %}
                        <div class="col-2">{{slide.datein|date("d/m/Y")}}</div>
                    {% else %}
                        <div class="col-2">{{slide.datein|date("m/d/Y")}}</div>
                    {% endif %}                        
                    {% if locale == 'fr' %}
                        <div class="col-2">{{slide.dateout|date("d/m/Y")}}</div>
                    {% else %}
                        <div class="col-2">{{slide.dateout|date("m/d/Y")}}</div>
                    {% endif %}                        
                    <div class="col-2">{{slide.name}}</div>
                    <div class="col-4">{{slide.description}}</div>
                    <div class="col-1">
                        <a href="{{ path('bootadmin.slide.delete', {id: slide.id}) }}">
                            <img class="svgsmall-lightblue" src="/images/svg/trash-bin-outline.svg" alt=""/>
                        </a>
                    </div>
                    <div class="col-1">
                        <a href="{{ path('bootadmin.slide.edit', {id: slide.id}) }}">
                            <img class="svgsmall-lightblue" src="/images/svg/pen-to-square-regular.svg" alt="" title=""/>                        
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {% if slide.active %}
                            <span class="on">{% trans %}admin.manageslides.activeflag{% endtrans %} : </span>
                        {% else %}
                            <span class="off">{% trans %}admin.manageslides.inactiveflag{% endtrans %} : </span>
                        {% endif %}
                        {% if slide.slider %}
                            <span class="on">{% trans %}admin.manageslides.sliderflag{% endtrans %} : </span>
                        {% else %}
                            <span class="off">{% trans %}admin.manageslides.nosliderflag{% endtrans %} : </span>
                        {% endif %}
                        {% if slide.daterange %}
                            <span class="on">{% trans %}admin.manageslides.daterangeflag{% endtrans %}</span>
                        {% else %}
                            <span class="off">{% trans %}admin.manageslides.nodaterangeflag{% endtrans %}</span>
                        {% endif %}
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
